     <% if (arr.length===0) { %>
        <h1 style="text-align: center;margin-top: 6px; color: blue;background-color: rgb(134, 197, 236);" > No Date Available</h1>
     <% } else {  %>
      <div class="resul">
    
        <div class="resulta">
         <!--si on ecrirer dans butom -->
           <form action="/serach" method="post">
        <input name="searchTx" onkeyup="rechercheclient(this.value)"  type="text" placeholder="serche" id="gg"> <br><br>
