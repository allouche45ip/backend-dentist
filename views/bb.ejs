                 <th> Id </th>
                 <th> Nom </th>
                 <th> Prenom </th>
                 <th> Age </th>
                 <th>Emaile </th>
                 <th> telephone </th>
                 <th>Message </th>
                 <th>   update </th>
                 <th>   delete </th>
                 <th> Time</th>
                 <th> viws</th>
                 </tr>
                
                 <tbody id="tbod">  
                    <% arr.forEach((item,index )  => { %>
                     <tr>
                      <td> <%= index %> </td>
